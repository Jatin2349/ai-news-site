generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // Nutzt Connection Pooling (Standard bei Vercel)
  directUrl = env("POSTGRES_URL_NON_POOLING") // Nutzt direkte Verbindung (für Migrationen)
}

// --- 1. NEWS (Umbenannt von NewsItem zu News, damit der Code funktioniert) ---
model News {
  id           String   @id @default(uuid())
  title        String
  summary      String?
  
  // Wichtig für Identifikation
  urlHash      String   @unique
  sourceUrl    String
  sourceName   String
  sourceDomain String?
  imageUrl     String?
  
  publishedAt  DateTime @default(now())
  
  // Postgres unterstützt echte Arrays. Das ist besser als JSON.
  tags         String[] 
  keypoints    String[]
  
  // Wir nutzen hier String statt Enum, um flexibler beim Import zu sein
  category     String? 

  // Optionale Felder aus deinem alten Schema (falls du sie brauchst)
  lang         String   @default("en")
  words        Int?
  isDuplicateOf String?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// --- 2. TOOLS ---
model Tool {
  id             String   @id @default(uuid())
  name           String
  url            String   @unique
  summary        String?
  pricing        String?
  category       String?
  affiliate_code String?
  rating         Int?
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

// --- 3. GUIDES ---
model Guide {
  id        String   @id @default(uuid())
  slug      String   @unique
  title     String
  summary   String?
  content   String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// --- 4. EDUCATION ---
model Education {
  id        String   @id @default(uuid())
  title     String
  content   String?  @db.Text
  url       String?
  order     Int      @default(0)
  summary   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// --- 5. GLOSSARY ---
model GlossaryEntry {
  id          String   @id @default(uuid())
  term        String   @unique
  definition  String   @db.Text
  category    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// --- 6. SUBSCRIBERS ---
model Subscriber {
  id        String   @id @default(uuid())
  email     String   @unique
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
}